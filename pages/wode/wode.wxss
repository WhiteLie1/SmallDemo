}
.container{
  padding:0;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F3D2AD; /*背景颜色*/
}

.userinfo-avatar {
  width: 108rpx;
  height: 108rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #2c2c2c;
}
.Dsencondbox{
  justify-content: center;/*view控件里面的布局的设置*/
  flex-direction: row;
  display: flex;
  background: #fff;
}
.sencondbox{ 
  padding: 5rpx;
  border: 2rpx solid #eee;/*边框的设置*/
  border-radius: 40rpx;/*弧度的设置*/
  width: 90%;
}
.Dthirdbox{
  background: #fff;
  justify-content: center;/*view控件里面的布局的设置*/
  flex-direction: row;
  display: flex;
}
.thirdbox{
  border-radius: 40rpx;/*弧度的设置*/
  width: 90%;
  justify-content: center;
  border: 2rpx solid #eee/*边框的设置*/
}
/*个人中心的下面的设置*/
.box{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:100%;
  height: 90rpx;
}
/* 订单 */
.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.xiao{
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorder-text {
  font-size: 30rpx;
  color: gray;
  margin: 20rpx;
  width: 40%;
}
.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}
.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}
.navs {
  display: flex;
  flex-wrap: nowrap;/**/
}
.navs1 {
  display: flex;
  flex-wrap: wrap;/*越界自动换行*/
  padding-bottom: 35rpx;
  padding-top: 25rpx;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
/*必备工具的设置*/
.nav-item1 {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 0rpx;
}
.nav-item1 .nav-image1 {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
}
.nav-item text {
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}

/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-text {
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.person-line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
  margin-left: 90rpx;
}
.person-line1{
  width: 100%;
  height: 2rpx;
  background: #eee;
