<!-- pages/mine/mine.wxml -->
<view class="container">
  <view bindtap ='person'class='head head-height'>
    <!-- 最上面的头部的一栏的设置 -->
    <block wx:if="{{!hasUserInfo && canIUse}}">
    
      <view class="userinfo">
        <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      </view>
      <button class="login-button head-height" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
        获取头像昵称
      </button>
    </block>
    <block wx:else>
      <view class="userinfo">
      <text class = "person" style='color:#fff'>个人中心</text>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        
      </view>
    </block>
  </view>
  <view style="background:#F0F0F0;height:15rpx;"class="separate"></view>

  
  <view class = 'sencondbox'>
    <view class="order" catchtap="toOrder">
      <text class="myorder-text">我的订单</text>
      <text class="myorderlook-text">查看全部订单</text>
      <image class="next-image" src="../../images/person/right.png"></image>
    </view>
     <view class="person-line1"></view>
    <view class="line"></view>
    <view class="navs">
      <block wx:for-items="{{orderItems}}" wx:key="name">
        <view class="nav-item" bindtap="toOrder{{item.typeId}}" data-type="{{item.name}}" data-typeid="{{item.typeId}}">
          <image src="{{item.imageurl}}" class="nav-image" />
          <view>{{item.name}}</view>
        </view>
      </block>
    </view>
  </view>

  <view class="separate"></view>
  <view class="person-list">
    <view bindtap="toOrder{{item.typeId}}"class="list-item">
      <image class="item-image" src="../../images/person/personal_card.png"></image>
      <text class="item-text">优惠券</text>
    </view>
    <view class="person-line"></view>
    <view bindtap="toOrder{{item.typeId}}"class="list-item">
      <image class="item-image" src="../../images/person/wodeshoucang.png"></image>
      <text class="item-text">我的消息</text>
    </view>
    <view class="person-line"></view>

    <view bindtap="toOrder{{item.typeId}}" class="list-item">
      <image class="item-image" src="../../images/person/personal_favorite.png"></image>
      <text class="item-text">我的收藏</text>
    </view>
    <view class="person-line"></view>
    <view bindtap="addres" class="list-item">
      <image class="item-image" src="../../images/person/personal_site.png"></image>
      <text class="item-text">地址管理</text>
    </view>
    <view class="person-line"></view>
    <view bindtap="toOrder{{item.typeId}}"class="list-item">
      <image class="item-image" src="../../images/person/personal_sale_record.png"></image>
      <text class="item-text">售后记录</text>
    </view>
    <view class="person-line"></view>
    <view bindtap="toOrder{{item.typeId}}"class="list-item">
      <image class="item-image" src="../../images/person/personal_evaluated.png"></image>
      <text class="item-text">我的评价</text>
    </view>
    <view class="person-line"></view>
   
    
   
    <view bindtap="toOrder{{item.typeId}}" class="list-item">
      <image class="item-image" src="../../images/person/personal_customer.png"></image>
      <text class="item-text">在线客服</text>
    </view>
    
  </view>
  <view class="separate"></view>
</view>